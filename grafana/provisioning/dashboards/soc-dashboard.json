{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "gnetId": null,
  "graphTooltip": 1,
  "id": null,
  "panels": [
    {
      "id": 1,
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "type": "timeseries",
      "title": "System CPU Usage",
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 10,
            "lineWidth": 1,
            "pointSize": 5,
            "showPoints": "never",
            "spanNulls": false
          },
          "max": 100,
          "min": 0,
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 70},
              {"color": "red", "value": 80}
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "legend": {"calcs": ["lastNotNull", "max"], "displayMode": "table", "placement": "bottom"},
        "tooltip": {"mode": "multi"}
      },
      "targets": [
        {
          "expr": "100 - (avg by(instance) (rate(node_cpu_seconds_total{mode=\"idle\", instance=~\"$instance\"}[5m])) * 100)",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 2,
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "type": "timeseries",
      "title": "Memory Usage",
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 10,
            "lineWidth": 1,
            "pointSize": 5,
            "showPoints": "never",
            "spanNulls": false
          },
          "max": 100,
          "min": 0,
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 70},
              {"color": "red", "value": 90}
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "legend": {"calcs": ["lastNotNull", "max"], "displayMode": "table", "placement": "bottom"},
        "tooltip": {"mode": "multi"}
      },
      "targets": [
        {
          "expr": "(1 - (node_memory_MemAvailable_bytes{instance=~\"$instance\"} / node_memory_MemTotal_bytes{instance=~\"$instance\"})) * 100",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 3,
      "gridPos": {"h": 10, "w": 24, "x": 0, "y": 8},
      "type": "logs",
      "title": "Security Events - Authentication",
      "datasource": "Loki",
      "options": {
        "showTime": true,
        "sortOrder": "Descending",
        "enableLogDetails": true
      },
      "targets": [
        {
          "expr": "{job=~\"$log_job\"} |~ \"(?i)(failed password|accepted|session opened|session closed|authentication failure|sudo|unauthorized)\"",
          "refId": "A"
        }
      ]
    },
    {
      "id": 4,
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 18},
      "type": "stat",
      "title": "Failed Login Attempts (Last Hour)",
      "datasource": "Loki",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 5},
              {"color": "red", "value": 20}
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "center",
        "orientation": "auto",
        "reduceOptions": {
          "values": false,
          "calcs": ["sum"],
          "fields": ""
        },
        "textMode": "auto"
      },
      "targets": [
        {
          "expr": "count_over_time({job=~\"$log_job\"} |~ \"(?i)(failed password|authentication failure)\" [1h])",
          "refId": "A"
        }
      ]
    },
    {
      "id": 5,
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 18},
      "type": "table",
      "title": "Top Error Sources",
      "datasource": "Loki",
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 10},
              {"color": "red", "value": 50}
            ]
          },
          "custom": {
            "align": "auto",
            "displayMode": "color-background-solid"
          }
        },
        "overrides": [
          {
            "matcher": {"id": "byName", "options": "job"},
            "properties": [{"id": "custom.width", "value": 150}]
          }
        ]
      },
      "options": {
        "showHeader": true,
        "sortBy": [{"displayName": "Value", "desc": true}]
      },
      "targets": [
        {
          "expr": "sum by(job) (count_over_time({job=~\"$log_job\"} |~ \"(?i)error\" [5m]))",
          "instant": true,
          "refId": "A"
        }
      ],
      "transformations": [
        {
          "id": "sortBy",
          "options": {"sort": [{"field": "Value", "order": "desc"}]}
        }
      ]
    }
  ],
  "refresh": "10s",
  "schemaVersion": 30,
  "style": "dark",
  "tags": ["security", "soc"],
  "templating": {
    "list": [
      {
        "current": {"selected": false, "text": "All", "value": "$__all"},
        "datasource": "Prometheus",
        "definition": "label_values(up, instance)",
        "hide": 0,
        "includeAll": true,
        "label": "Instance",
        "multi": false,
        "name": "instance",
        "options": [],
        "query": "label_values(up, instance)",
        "refresh": 2,
        "regex": "",
        "skipUrlSync": false,
        "sort": 1,
        "type": "query"
      },
      {
        "current": {"selected": false, "text": "All", "value": "$__all"},
        "datasource": "Loki",
        "definition": "label_values(job)",
        "hide": 0,
        "includeAll": true,
        "label": "Log Source",
        "multi": true,
        "name": "log_job",
        "options": [],
        "query": "label_values(job)",
        "refresh": 2,
        "regex": "",
        "skipUrlSync": false,
        "sort": 1,
        "type": "query"
      }
    ]
  },
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {},
  "timezone": "browser",
  "title": "SOC Security Overview",
